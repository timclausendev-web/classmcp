{
  "name": "classmcp",
  "version": "2.0.0",
  "description": "MCP server providing semantic CSS patterns optimized for AI code generation - supports Tailwind, Bootstrap, UnoCSS, Tachyons with 77% token savings",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "classmcp": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "tailwind",
    "tailwindcss",
    "bootstrap",
    "unocss",
    "tachyons",
    "css",
    "semantic-css",
    "ai",
    "claude",
    "chatgpt",
    "llm",
    "ssr",
    "hydration",
    "token-optimization",
    "utility-css",
    "code-generation"
  ],
  "author": "Tim Carter Clausen <tim.clausen.dev@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timclausendev-web/classmcp.git"
  },
  "homepage": "https://github.com/timclausendev-web/classmcp#readme",
  "bugs": {
    "url": "https://github.com/timclausendev-web/classmcp/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  }
}
